<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="exam"
            type="mo.edu.ipm.siweb.data.model.ExamTime" />
    </data>
    
    <LinearLayout
        android:id="@+id/exam_time_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exam_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu"
            tools:text="MATH211-21221 STATISTIC I" />

        <TextView
            android:id="@+id/exam_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            tools:text="2018-11-11(THU) 10:00 - 13:00" />

        <TextView
            android:id="@+id/exam_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            style="@style/TextAppearance.AppCompat.Caption"
            tools:text="澳門理工學院體育館 IPM Multisport Pavilion" />

    </LinearLayout>

</layout>
